---
import Button from "./ui/Button.astro";
import BrandLogo from '@components/BrandLogo.astro';
import ThemeIcon from '@components/ThemeIcon.astro';

const navLinks = [
    {
        label: "Home",
        id: "Home",
        href: "/"
    },
    {
        label: "Experiencia",
        id: "Experience",
        href: "#Experience"
    },
    {
        label: "Proyectos",
        id: "Projects",        
        href: "#MyProjects"
    }
]

---
<header class="max-w-screen-xl lg:max-w-4xl md:max-w-2xl m-auto p-4 flex justify-between items-center">
    <div class="logo ">
        <a href="/" class="flex items-center gap-1">
            <BrandLogo class="text-primary h-8" width="32" height="32"/>
            <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white hidden md:block">Luchito</span>
        </a>
    </div>

    <nav class="hidden md:inline-flex gap-4 items-center">
        <ul class="flex gap-4 dark:text-white">
            {navLinks.map(({ label, href }) => {
                return (
                <li
                    class={``}
                >
                    <a href={href} class="hover:text-primaryDark hover:dark:text-primary">
                    {label}
                    </a>
                </li>
                );
            })}
        </ul>
        <!-- <Button Label="Download CV"/> -->
        <ThemeIcon />
    </nav>
</header>