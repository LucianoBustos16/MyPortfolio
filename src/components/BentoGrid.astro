---
import SectionContainer from "./SectionContainer.astro";

const TAGS = {
  ASTRO: {
    name: "Astro",
    class: "bg-[#883aea] text-white",
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
  },
}
const PROJECTS = [
  {
    title: "Luchito - Una hermosa libreria de cosas",
    description:
      "Mi biblioteca que puede ayudarte a encontrar herramientas creativas para mejorar tu flujo de trabajo y dar vida a las ideas más rápido.",
    link: "https://luchito.com.ar",
    image: "/luchito.png",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
  {
    title: "LBDTw",
    description:
      "El blog de LBDTw, mi comunidad de hinchas de mi viejo y glorioso Belgrano",
    link: "https://lbdtw.com.ar",
    image: "/lbdtw.png",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
]


---

<SectionContainer>
    <div class="parent">
        <div class="div1 bg-red-200 rounded-2xl overflow-hidden md:group-hover:-translate-y-1 md:group-hover:shadow-2xl">
            <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src="/lbdtw2024.png" />
        </div>
        <div class="div2 bg-green-200 rounded-2xl">
            
        </div>
        <div class="div3 bg-blue-200 rounded-2xl "> Div 3 </div>
        <div class="div4 bg-purple-200 rounded-2xl overflow-hidden">
            <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src="/luchito.png" /> </div>
        </div>


</SectionContainer>



    <style>
    .parent {
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        grid-template-rows: repeat(4, 1fr);
        grid-column-gap: 16px;
        grid-row-gap: 16px;
        }
    
    .div1 { grid-area: 1 / 1 / 3 / 5; }
    .div2 { grid-area: 3 / 1 / 5 / 3; }
    .div3 { grid-area: 3 / 3 / 5 / 5; }
    .div4 { grid-area: 1 / 5 / 5 / 7; }
    </style>
